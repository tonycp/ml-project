# Variables de entorno para db-tool
# Copia este archivo a .env y ajusta los valores
# Los prefijos son: DB_, PATH_, LOADER_

# Database Configuration
DB_USERNAME=sa
DB_PASSWORD=Meteorology2025!
DB_DEFAULT_DATABASE=master
DB_CONNECTION_TIMEOUT=300
DB_HEALTH_CHECK_TIMEOUT=120
DB_HEALTH_CHECK_INTERVAL=1

# Path Configuration
PATH_DATA_DIR=.data
PATH_LOGS_DIR=.data/logs
PATH_BACKUP_DIR=backup
PATH_SETUP_DIR=backup/start
PATH_COMPOSE_FILE=docker-compose.yml

# Loader Configuration
LOADER_BATCH_SIZE=100
LOADER_MAX_WORKERS=5
LOADER_DOCKER_STARTUP_WAIT=5
